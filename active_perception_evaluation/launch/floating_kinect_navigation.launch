<?xml version="1.0"?>
<launch>
  <!-- ground truth to tf publisher -->
  <node pkg="active_perception_evaluation" type="floating_kinect_localizer" name="floating_kinect_localizer" respawn="true" output="screen" />
  <!-- regular map for bootstrapping of octomap -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find race_navigation)/config/map_sim.pgm 0.05" respawn="true" output="screen" />
  <!-- obstacle map for navigation -->
  <node name="nav_map_server" pkg="map_server" type="map_server" args="$(find active_perception_evaluation)/config/obstacle_map_race.pgm 0.05" respawn="true" output="screen">
    <remap from="map" to="/obstacle_map"/>
  </node>
  <!-- move_base using obstacle map -->
  <node pkg="move_base" type="move_base" name="move_base_node" respawn="true" output="screen">
    <remap from="map" to="/obstacle_map"/>
    <!-- Use the dwa local planner for the PR2 -->
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <!-- Load common configuration files -->
    <rosparam file="$(find pr2_navigation_config)/move_base/move_base_params.yaml" command="load" />
    <rosparam file="$(find active_perception_evaluation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find active_perception_evaluation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find pr2_navigation_config)/move_base/dwa_local_planner.yaml" command="load" ns="DWAPlannerROS" />
    <rosparam file="$(find pr2_navigation_config)/move_base/recovery_behaviors.yaml" command="load" />
    <!-- Load global navigation specific parameters -->
    <rosparam file="$(find pr2_navigation_global)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find pr2_navigation_global)/config/global_costmap_params.yaml" command="load" />
  </node>
</launch>
